@{
    ViewData["Title"] = "Home";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model SonOfCod.Models.Recipient

<p>Admin ONLY - @Html.ActionLink("Mailing List", "MailingList")</p>

<h2>Welcome to the newsletter!</h2>
<h3>Sign up!</h3>
@using (Html.BeginForm())
{
    <h4>Email Address - Required</h4>
    @Html.EditorFor(model => model.Email)

    <h4>First Name</h4>
    @Html.EditorFor(model => model.FirstName)

    <h4>Last Name</h4>
    @Html.EditorFor(model => model.LastName)

    <h4>Phone Number</h4>
    @Html.EditorFor(model => model.PhoneNumber)

    <input type="submit" value="Sign up" class="btn-dark"/>
}

